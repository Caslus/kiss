---
import { Image } from "astro:assets";
import kissLogo from "../assets/kiss_logo.png";
import type { Config } from "../types/config";

interface Props {
	config: Config;
}

const { config } = Astro.props;
---
{
!config.disableLogo ? (
    config.customLogo ? (
        <img src={config.customLogo} alt="Custom Logo" class="pb-10 w-96 select-none" draggable="false" />
    ) : (
        <Image src={kissLogo} loading={"eager"} alt="KISS Logo" class="pb-10 w-96 select-none" draggable="false" />
    )
) : null
}